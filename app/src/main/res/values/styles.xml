<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="BaseTheme.App.Toolbar" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/bar_background_color</item>
        <item name="android:windowLightStatusBar">true</item> <!-- android 6.0+ -->

        <!-- action mode -->
        <item name="windowActionBar">false</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowNoTitle">true</item>

        <item name="actionModeStyle">@style/App.ActionMode.LightTheme</item>
        <item name="popupMenuStyle">@style/App.Widget.PopupMenu</item>
        <item name="textInputStyle">@style/App.Widget.TextInput</item>

        <item name="materialButtonStyle">@style/App.Widget.Button</item>
        <item name="materialAlertDialogTheme">@style/AppCompatAlertDialogStyle</item>
        <item name="bottomNavigationStyle">@style/App.Widget.BottomNavigationView</item>

        <item name="switchStyle">@style/App.Widget.Switch</item>
        <item name="switchPreferenceStyle">@style/App.Preference.Switch</item>

        <item name="colorAccent">@color/fancy_orange</item>
        <!-- Primary -->
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorOnPrimary">@color/md_theme_onPrimary</item>

        <!-- Secondary -->
        <item name="colorSecondary">@color/md_theme_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_onSecondary</item>

        <item name="colorSurface">@color/md_theme_surface</item>
        <item name="colorOnSurface">@color/md_theme_onSurface</item>

        <item name="android:colorControlNormal">@color/fancy_light_black</item>
        <item name="android:colorControlActivated">@color/fancy_orange</item>
        <item name="android:colorControlHighlight">@color/fancy_light_black</item>
    </style>


    <style name="ToolBarStyle" parent="">
        <item name="popupTheme">@style/ThemeOverlay.Material3.Light</item>
        <item name="theme">@style/ThemeOverlay.Material3.Light</item>
        <item name="android:background">@color/bar_background_color</item>
        <item name="titleTextColor">@color/bar_title_color</item>
        <item name="colorSurface">@color/white</item>
        <item name="navigationIcon">@drawable/baseline_arrow_back_24</item>
        <item name="navigationIconTint">@color/bar_title_color</item>
    </style>

    <style name="ToolBarStyle.Editor" parent="">
        <item name="popupTheme">@style/ThemeOverlay.Material3.Light</item>
        <item name="theme">@style/ThemeOverlay.Material3.Light</item>
        <item name="android:background">@color/toolbar_editor_background_color</item>
        <item name="titleTextColor">@color/toolbar_editor_title_color</item>
        <item name="android:textColorSecondary">#ffffff</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="navigationIcon">@drawable/baseline_arrow_back_24</item>
        <item name="navigationIconTint">@color/toolbar_editor_title_color</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorColor">@color/fancy_orange</item>
        <item name="android:background">@drawable/tab_background_drawable</item>
        <item name="android:contentInsetStart">?actionBarInsetStart</item>
        <item name="tabSelectedTextColor">@color/fancy_orange</item>
    </style>

    <style name="App.Widget.PopupMenu" parent="@style/Widget.Material3.PopupMenu">
        <item name="popupMenuBackground">@color/item_title_color</item>
    </style>

    <style name="App.ActionMode.LightTheme" parent="Widget.Material3.ActionMode">
        <item name="android:background">@color/bar_background_color</item>
        <item name="background">@color/bar_background_color</item>
        <item name="android:textColor">@color/bar_title_color</item>
    </style>


    <style name="App.Widget.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="android:background">@color/bar_background_color</item>
        <item name="backgroundTint">@null</item>
        <item name="itemIconTint">@color/selector_color_primary</item>
        <item name="itemTextColor">@color/selector_color_primary</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="android:minHeight">?actionBarSize</item>
        <item name="itemPaddingTop">8dp</item>
        <item name="itemPaddingBottom">14dp</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/App.AlertDialog.Material3</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AppCompatAlertDialog.TitleTextStyle
        </item>
        <item name="buttonBarPositiveButtonStyle">@style/AppCompatAlertDialog.ButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AppCompatAlertDialog.ButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/AppCompatAlertDialog.ButtonStyle</item>

        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/md_theme_secondary</item>
        <item name="colorSurface">@color/alert_dialog_background_color</item>
        <item name="colorOnSurface">@color/md_theme_onSurface</item>
    </style>

    <style name="AppCompatAlertDialog.TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppCompatAlertDialog.ButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/fancy_orange</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="App.AlertDialog.Material3" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>


    <!-- Button.OutlinedButton -->
    <style name="App.Widget.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.OutlinedButton</item>
    </style>

    <style name="ThemeOverlay.App.Button.OutlinedButton" parent="ThemeOverlay.Material3.Button">
        <item name="colorPrimary">@color/white</item>
    </style>

    <!-- Button -->
    <style name="App.Widget.Button" parent="Widget.Material3.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
        <item name="backgroundColor">@color/md_theme_primary</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="ThemeOverlay.Material3.Button">
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorOnPrimary">@color/md_theme_onPrimary</item>
    </style>

    <!-- TextInput -->
    <style name="App.Widget.TextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="colorPrimary">@color/item_title_color</item>
        <item name="colorOnSurface">@color/item_title_color</item>
        <item name="colorError">@color/red</item>
        <item name="editTextStyle">@style/Widget.Material3.TextInputEditText.OutlinedBox</item>
    </style>


    <!-- Switch -->
    <style name="App.Widget.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorOnSurface">@color/md_theme_primary</item>
        <item name="colorSecondary">@color/light_gray</item>
    </style>

    <style name="App.Preference.Switch" parent="@style/Preference.SwitchPreferenceCompat">
        <item name="widgetLayout">@layout/preference_widget_material_switch</item>
    </style>

    <!-- Notifications -->
    <style name="NotificationTitle" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NotificationContent" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PolicyDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>


    <!--ShapeableImageView-->
    <style name="ShapeCircleStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- BottomSheet DayNight -->
    <style name="ThemeOverlay.Catalog.BottomSheetDialog.Scrollable" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Catalog.BottomSheet.Modal.Scrollable</item>
    </style>

    <style name="Widget.Catalog.BottomSheet.Modal.Scrollable" parent="Widget.Material3.BottomSheet.Modal">
        <item name="paddingBottomSystemWindowInsets">false</item>
    </style>


    <style name="ListItemTitleStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">@integer/list_item_title_max_lines</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/lv_title_txt_size</item>
        <item name="android:textColor">@color/item_title_color</item>
    </style>

    <style name="ListItemSubTitleStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">@integer/list_item_title_max_lines</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/lv_subtitle_txt_size</item>
        <item name="android:textColor">@color/item_subtitle_color</item>
    </style>
</resources>
