<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ToolBarStyle" parent="">
        <item name="popupTheme">@style/ThemeOverlay.Material3.Light</item>
        <item name="theme">@style/ThemeOverlay.Material3.Light</item>
        <item name="android:background">@color/toolbar_background_color</item>
        <item name="titleTextColor">@color/toolbar_title_color</item>
        <item name="colorSurface">@color/white</item>
        <item name="navigationIcon">@drawable/baseline_arrow_back_24</item>
        <item name="navigationIconTint">@color/toolbar_title_color</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/fancy_orange</item>
        <item name="android:background">@drawable/tab_background_drawable</item>
        <item name="android:contentInsetStart">?actionBarInsetStart</item>
        <item name="tabSelectedTextAppearance">@style/TabTextAppearancce</item>
        <item name="tabSelectedTextColor">@color/fancy_orange</item>
    </style>

    <style name="TabTextAppearancce" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/fancy_dark_black</item>
    </style>

    <style name="PopStyle" parent="ThemeOverlay.Material3.Light">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="NegativeButton" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/fancy_dark_gray</item>
        <item name="android:textColor">@color/light_black</item>
    </style>

    <style name="LightTheme.ActionMode" parent="Widget.Material3.ActionMode">
        <item name="android:background">@color/toolbar_background_color</item>
        <item name="background">@color/toolbar_background_color</item>
    </style>


    <style name="SeafileListStyle" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/fancy_light_white</item>
        <item name="android:divider">@drawable/lv_divider_inset</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:listSelector">@drawable/list_item_selector</item>
        <!-- <item name="android:colorPressedHighlight">@color/black</item> -->
        <!-- <item name="android:colorLongPressedHighlight">@color/black</item> -->
    </style>

    <style name="AppCompatAlertDialogStyle" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AppCompatAlertDialog.TitleTextStyle
        </item>
        <item name="buttonBarPositiveButtonStyle">@style/AppCompatAlertDialog.ButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AppCompatAlertDialog.ButtonStyle</item>

        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/md_theme_secondary</item>
        <item name="colorSurface">@color/alert_dialog_background_color</item>
        <item name="colorOnSurface">@color/md_theme_onSurface</item>
    </style>

    <style name="AppCompatAlertDialog.TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">#1E2129</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppCompatAlertDialog.ButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/fancy_orange</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--BottomSheetStyle-->
    <style name="BottomSheetStyle" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="bottomSheetStyle">@style/Widget.Catalog.BottomSheet.Modal.Scrollable</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
        <item name="backgroundColor">@color/md_theme_primary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="Widget.App.TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    </style>

    <style name="ThemeOverlay.App.Button.TextButton" parent="">
        <item name="colorPrimary">@color/md_theme_primary</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorOnPrimary">@color/md_theme_onPrimary</item>
    </style>

    <!-- App Widget Shape -->
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Notifications -->
    <style name="NotificationTitle" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NotificationContent" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PolicyDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>


    <!--ShapeableImageView-->
    <style name="ShapeCircleStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ThemeOverlay.Catalog.BottomSheetDialog.Scrollable" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Catalog.BottomSheet.Modal.Scrollable</item>
    </style>

    <style name="Widget.Catalog.BottomSheet.Modal.Scrollable" parent="Widget.Material3.BottomSheet.Modal">
        <item name="paddingBottomSystemWindowInsets">false</item>
    </style>

    <style name="ThemeOverlay.Material3.Catalog.Toolbar.Contextual" parent="">
        <item name="colorControlNormal">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.Material3.Catalog.Toolbar.Contextual.Title" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/m3_toolbar_text_size_title</item>
    </style>

    <style name="ListItemTitleStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">@integer/list_item_title_max_lines</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/lv_title_txt_size</item>
        <item name="android:textColor">@color/list_item_title_color</item>
    </style>

    <style name="ListItemSubTitleStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">@integer/list_item_title_max_lines</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/lv_subtitle_txt_size</item>
        <item name="android:textColor">@color/list_item_subtitle_color</item>
    </style>
</resources>
